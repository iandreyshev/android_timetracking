<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/noCard">

        <Constraint
            android:id="@id/card"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:translationX="-200dp"
            app:layout_constraintBottom_toBottomOf="@id/cardBottomGuideline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardTopGuideline1" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/emptyCard"
        app:deriveConstraintsFrom="@+id/noCard">

        <Constraint
            android:id="@id/card"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@id/cardBottomGuideline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardTopGuideline1" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/oneEvent"
        app:deriveConstraintsFrom="@id/noCard" />

    <ConstraintSet
        android:id="@+id/twoEvents"
        app:deriveConstraintsFrom="@id/oneEvent">

        <Constraint
            android:id="@id/event1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toBottomOf="@id/event2" />

        <Constraint
            android:id="@id/event2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/twoEventsPause"
        app:deriveConstraintsFrom="@id/twoEvents" />

    <ConstraintSet
        android:id="@+id/threeEvents"
        app:deriveConstraintsFrom="@id/twoEvents">

        <Constraint
            android:id="@id/event1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toBottomOf="@id/event2" />

        <Constraint
            android:id="@id/event2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toBottomOf="@id/event3" />

        <Constraint
            android:id="@id/event3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/oneEventSelected"
        app:deriveConstraintsFrom="@id/threeEvents" />

    <ConstraintSet
        android:id="@+id/twoEventsSelected"
        app:deriveConstraintsFrom="@id/oneEventSelected" />

    <ConstraintSet
        android:id="@+id/tapToCompleteTutorial"
        app:deriveConstraintsFrom="@id/twoEventsSelected" />

    <Transition
        app:constraintSetEnd="@+id/emptyCard"
        app:constraintSetStart="@+id/noCard"
        app:duration="500">

        <OnClick app:targetId="@id/createFirstCardButton" />

    </Transition>

    <Transition
        app:constraintSetEnd="@+id/oneEvent"
        app:constraintSetStart="@+id/emptyCard"
        app:duration="500">

        <OnClick app:targetId="@id/createFirstEventButton" />

    </Transition>

    <Transition
        app:constraintSetEnd="@+id/twoEvents"
        app:constraintSetStart="@+id/oneEvent"
        app:duration="500">

        <OnClick app:targetId="@id/createEventButton" />

    </Transition>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/twoEventsPause"
        app:constraintSetStart="@id/twoEvents"
        app:duration="300" />

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/threeEvents"
        app:constraintSetStart="@id/twoEventsPause"
        app:duration="500" />

    <Transition
        app:constraintSetEnd="@id/oneEventSelected"
        app:constraintSetStart="@id/threeEvents"
        app:duration="500">

        <OnClick app:targetId="@id/event2" />

    </Transition>

    <Transition
        app:constraintSetEnd="@id/twoEventsSelected"
        app:constraintSetStart="@id/oneEventSelected"
        app:duration="500">

        <OnClick app:targetId="@id/event3" />

    </Transition>

</MotionScene>
